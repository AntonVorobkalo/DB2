--1
SELECT MUSTERI.mAdi, MUSTERI.mSoyadi FROM SATIS JOIN MUSTERI ON SATIS.mNo = MUSTERI.mNo


--2
SELECT MUSTERI.mAdi, MUSTERI.mSoyadi, ARAC.marka FROM ALIM 
JOIN MUSTERI ON MUSTERI.mNo = ALIM.mNo JOIN ARAC ON MUSTERI.mNo = ARAC.aracNo

