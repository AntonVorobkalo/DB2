CREATE DATABASE GALERI

CREATE TABLE MUSTERI (
	mNo int PRIMARY KEY,
	mAdi varchar(50),
	mSoyadi varchar(50),
	mTelefon int, 
	mAdres varchar(50)
)


CREATE TABLE ARAC (
	aracNo int PRIMARY KEY,
	model int,
	marka varchar(50),
	plaka varchar(50), 
	fiyat int
)


CREATE TABLE SATIS (
	satNo int PRIMARY KEY,
	satTarih int,
	satFiyat int,
	mNo int,
	aNo int
)

CREATE TABLE ALIM (
	alNo int PRIMARY KEY,
	alTarih int,
	alFiyat int,
	mNo int,
	aNo int
)

select * from MUSTERI
select * from ARAC
select * from SATIS
select * from ALIM

